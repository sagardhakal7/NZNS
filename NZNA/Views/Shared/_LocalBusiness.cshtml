@using NZNA.Models;
@{ 
    ApplicationDbContext db = new ApplicationDbContext();
    var sponsors = db.Sponsors.ToList();
}
<div class="col-lg-3 col-md-4 col-sm-6">
    <aside class="sidebar">
        <div class="widget sidebar-widget styled-nav">
            <div class="sidebar-title">
                <h2>Local Businesses</h2>
            </div>
            <nav class="nav-outer">
                <ul>
                    @foreach (var items in sponsors)
                    {
                        <li>
                            <a class="hvr-shutter-in-horizontal" href="#">
                                <b>@items.Name</b> <br /> Phone: @items.Phone
                            </a>
                        </li>
                    }


                </ul>
            </nav>
        </div>
    </aside>

</div>