    <script>
    $(function() {
        // Reference the auto-generated proxy for the hub.
        var chat = $.connection.limsHub;
        // Create a function that the hub can call back to display messages.
        chat.client.addnewMessagenotification = function(fromuser, id) {
            $('#Messagenotification').append('<li class="unread"><a href="/admin/message/messagedetails/' + id + '">'
                + '<img src="../../images/users/' + fromuser + '.jpg" class="absolute-left-content img-circle" alt="' + fromuser + '">'
                + '<strong>' + fromuser + '</strong> Sent New Message To You </a><li>');
            $('#Messagecount').append('!');
        };
        $.connection.hub.start().done(function() {
            $('#sendmessage').click(function() {
                chat.server.message($('#displayname').val(), $('#message').val());
                $('#message').val('').focus();
            });
        });
    });
    </script>
